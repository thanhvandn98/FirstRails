<div class="jumbotron">
    <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
    <hr class="my-4">
    <p class="lead">Email: <%= @friend.email %> </p>
    <p class="lead">Phone: <%= @friend.phone %> </p>
    <p class="lead">Facebook: <%= @friend.facebook %> </p>
    <%= link_to 'Edit', edit_friend_path(@friend), class:'btn btn-secondary' %> |
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %> |
    <%= link_to 'Back', friends_path, class:'btn btn-secondary' %>
</div>